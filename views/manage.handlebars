<div class="row justify-content-center">

    <div class="card col-md-10">
        <div id="manage-tab" class="card-body">
            <ul class="nav nav-tabs justify-content-center" id="myTab" role="tablist">
                <li class="nav-item">
                    <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">Agenda</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false">Edit Event</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="speakers-tab" data-toggle="tab" href="#speakers" role="tab" aria-controls="speakers" aria-selected="fasle">Speakers</a>
                </li>

            </ul>
            <div class="tab-content" id="myTabContent">
                <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                    <ul class="list-group" id="agenda-list">

                        {{#if agenda}}
                        {{#each agenda}}
                        <li class="list-group-item d-flex justify-content-between align-items-center" id="agenda-item-{{_id}}">
                            <div class="{{state}}" id="toedit-{{_id}}" style="width:86%; padding:5px;" >{{evt_agenda}}
                            </div>
                            <span>
                                <button class="btn btn-light btn-sm done-agenda"  id="done-{{_id}}" data-id="{{_id}}">
                                    <i class="icon text-success fas fa-minus fa-fw"></i>
                                </button>
                                <button class="btn d-none btn-light btn-sm" id="accept-{{_id}}" data-id="{{_id}}">
                                    <i class="icon text-info fas fa-check fa-fw"></i>
                                </button>
                                <button class="btn btn-light btn-sm edit-agenda" {{button_state}} id="edit-agenda" data-id="{{_id}}">
                                        <i class="icon text-info fas fa-pencil-alt fa-fw"></i>
                                    </button>
                                    <button class="btn btn-light btn-sm delete-agenda" id="delete-agenda" data-id="{{_id}}">
                                        <i class="icon text-danger fas fa-trash-alt fa-fw"></i>
                                    </button>
                                </span>
                        </li>
                        {{/each}}
                        {{/if}}
                        <div class="row justify-content-center">
                            <div class="" style="margin-top:10px">
                                <button class="btn btn-lg btn-info" data-toggle="modal" data-target="#agendaModal">
                                    Add Agenda
                                </button>
                            </div>
                        </div>
                    </ul>
                </div>

                {{> event-tab}} {{> speaker-tab}}
            </div>
        </div>


        <div id="manage-table" class="table-responsive d-none">
            <table class="table"> 
                <caption>List of users</caption>
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Username</th>
                        <th scope="col">Full Name</th>
                        <th scope="col">Email</th>
                        <th scope="col">Phone</th>
                    </tr>
                </thead>
                <tbody id="t-body">
                </tbody>
            </table>
        </div>

    </div>
</div>

</div>


</div>
</div>
