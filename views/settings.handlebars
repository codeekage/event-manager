<div class="main-panel">
    {{> navbar}}
    <div class="content">
        <button type="button" id="show-preview-btn" class="btn btn-round btn-success btn-icon no-caret btn-tooltip" data-toggle="tooltip" data-placement="top" data-animation="true" data-delay="100" data-original-title="Show Event Preview"
            aria-expanded="false" style="float:right; display:none">
            <i class="now-ui-icons  ui-1_check"></i>
        </button>
        <div id="event-card" class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header">
                        <h5 class="title">Create Event!</h5>
                    </div>
                    <div class="card-body">
                        <form id="event-form" method="POST" action="/api/event">
                            <input type="hidden" name="host_id" value="{{host}}">
                            <div class="row">
                                <div class="col-md-6 pr-1">
                                    <div class="form-group">
                                        <label>Event Name</label>
                                        <input id="event-name" type="text" class="form-control" placeholder="Node.js Africa General Meeting" name="evt_name">
                                    </div>
                                </div>
                                <div class="col-md-6 pl-1">
                                    <div class="form-group">
                                        <label>Invite Co-Host</label>
                                        <input id="co-host" type="email" class="form-control" placeholder="Email" name="co_host">
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-5">
                                    <div class="form-group">
                                        <label>Event Date/Time</label>
                                        <input id="event-date" type="datetime-local" class="form-control date-picker" name="evt_date">
                                    </div>
                                </div>
                                <div class="col-md-7">
                                    <div class="form-group">
                                        <label>Event Venue</label>
                                        <input id="event-venue" type="text" class="form-control" placeholder="Venue Address" name="evt_venue">
                                    </div>
                                </div>
                            </div>
                        
                            <div class="row">
                                <div class="col-md-4 pr-1">
                                    <div class="form-group">
                                        <label>Re-Occuring Event</label>
                                        <input type="text" class="form-control" placeholder="Yes/No" value="" name="evt_occ">
                                    </div>
                                </div>
                                <div class="col-md-4 px-1">
                                    <div class="form-group">
                                        <label>Event Type</label>
                                        <input id="event-type" type="text" class="form-control" placeholder="Tech-Meetup" value="" name="evt_type">
                                    </div>
                                </div>
                                <div class="col-md-4 pl-1">
                                    <div class="form-group">
                                        <label>Event Passkey</label>
                                        <input type="" class="form-control" placeholder="PassKey" name="evt_passkey">
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label>Notification Msg.</label>
                                        <textarea id="noti-msg" rows="4" cols="80" class="form-control" placeholder="Here can be your description" value="Mike" name="noti_msg"></textarea>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <button class="btn form-control btn-success" id="btn-event" type="submit">Submit</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
           <div id="preview-card" class="col-md-4">
                <div class="card card-user">
                 <div>
                      {{!--   <img src="../assets/img//bg5.jpg" alt="..."> --}}
                    <button type="button" id="hide-preview-btn" class="btn btn-round btn-simple btn-danger btn-icon no-caret" data-toggle="dropdown"
                        aria-expanded="false" style="float:right;">
                        <i class="now-ui-icons  ui-1_simple-remove"></i>
                    </button>
                    </div>
                    <div class="card-body" style="background:url(/assets/img/bg-attend.jpg); background-size:cover; color:white">
                        <div class="author" style="margin-top:50px">
                            <p id="preview-event-name" class="description text-light cursive">
                                Event Name
                            </p>
                        </div>
                        <p id="preview-event-noti" class="description text-center text-light">
                            "Lamborghini Mercy
                            <br> Your chick she so thirsty
                            <br> I'm in that two seat Lambo"
                        </p>

                        <div class="row">
                            <div class="col-md-7 pr-1">
                                <div class="form-group">
                                    <label class="text-light">Enter Passkey</label>
                                    <input type="text" class="form-control" placeholder="Yes/No" value="" name="evt_occ">
                                </div>
                            </div>

                            <div class="col-md-4 px-1">
                                <div class="form-group">
                                    {{!--
                                    <label for=""></label> --}}
                                    <button class="bg-danger text-light btn form-control btn-success btn-outline-danger" id="btn-event" type="submit" style="margin-top: 25px;">Submit</button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <hr>
                    <div class="button-container">
                        <button href="#" class="btn btn-neutral btn-icon btn-round btn-lg">
                            <i class="fab fa-facebook-f"></i>
                        </button>
                        <button href="#" class="btn btn-neutral btn-icon btn-round btn-lg">
                            <i class="fab fa-twitter"></i>
                        </button>
                        <button href="#" class="btn btn-neutral btn-icon btn-round btn-lg">
                            <i class="fab fa-google-plus-g"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</div>