                    </a>
                    {{#if evt_status}}
                    <button type="button" class="d-none btn btn-info btn-raised active" id="on-live">
                        <span id="live">GO LIVE</span>
                    </button>
                    <button type="button" class="btn btn-info btn-raised active" id="off-live">
                        <span id="live">LIVE</span>
                    </button>
                    {{else}}
                    <button type="button" class="btn btn-info btn-raised active" id="on-live">
                        <span id="live">GO LIVE</span>
                    </button>
                    <button type="button" class="d-none btn btn-info btn-raised active" id="off-live">
                        <span id="live">LIVE</span>
                    </button>
                    {{/if}}
                </li>
            </ul>
        </div>
    </nav>

