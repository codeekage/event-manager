<body class="body">
    <nav class="navbar navbar-expand-lg navbar-light bg-light mb-2 fixed-nav-bar justify-content-between">
        <!-- Just an image -->

        <a class="navbar-brand" href="/">
            <img src="/assets/img/favicon.png" width="30" height="30" alt=""> {{organization}}
        </a>

        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
            aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse justify-content-center" id="navbarSupportedContent">
            <ul class="navbar-nav">
                <li class="nav-item active">
                    <a class="nav-link" href="#" style="color:#007bff">{{evt_date}}</a>
                </li>
                <li class="nav-item nav-btn">
                    <a class="btn btn-info btn-raised active share-link" data-link="/attend/{{evt_link}}">
